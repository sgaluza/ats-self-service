# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ats

# Supabase
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_ANON_KEY=your-supabase-anon-key

# JWT
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# WireGuard
WG_SERVER_HOST=your-server-ip
WG_BASE_PORT=25000
WG_NETWORK_PREFIX=10.7.7

# Proxy
PROXY_BASE_PORT=36000

# Email (for invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@ats-service.com

# Application
APP_URL=http://localhost:3000
API_URL=http://localhost:3001

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:6006
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW=60000

# Docker
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_IMAGE=sgaluza/ats-wg:0.6
